{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "templates/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/templates/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/templates/$1"
    }
  ]
}
